<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Peexl_SpecialCategories>
            <version>0.1.0</version>
        </Peexl_SpecialCategories>
    </modules>
   
   <global>
        <resources>
            <add_category_attribute>
                <setup>
                    <module>Peexl_SpecialCategories</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </add_category_attribute>
            <add_category_attribute_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </add_category_attribute_write>
            <add_category_attribute_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </add_category_attribute_read>
        </resources>
        <blocks>
            <catalog>
                <rewrite>
                    <category_view>Peexl_SpecialCategories_Block_Catalog_Category_View</category_view>
                </rewrite>
            </catalog>
        </blocks>
    </global>
    
     <frontend>
        <routers>
            <peexl_specialcategories>
                <use>standard</use>
                <args>
                    <module>Peexl_SpecialCategories</module>
                    <frontName>pxtools</frontName>
                </args>
            </peexl_specialcategories>
        </routers>
        <layout>
            <updates>
                <specialcategories>
                    <file>peexl_specialcategories/layout.xml</file>
                </specialcategories>
            </updates>
        </layout>
    </frontend>
   
</config>    